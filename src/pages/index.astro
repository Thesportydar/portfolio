---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import About from '@/components/AboutMe.astro';
import Skills from '@/components/Skills.astro';
import MyProjects from '@/components/MyProjects.astro';
import Experience from '@/components/Experience.astro';

---

<script src="../scripts/local.js"></script>
<Layout>
    <section class="bg-black justify-center flex flex-col motion-preset-slide-right motion-delay-0" style="height: calc(100vh - 3.5rem);">
        <Welcome />
    </section>

    <div class="bg-white py-20 lg:py-32 flex flex-col gap-16 lg:gap-32">
        <About />

        <Skills />

        <Experience />

        <MyProjects />
    </div>
</Layout>
