---
interface Props {
    text: string;
}

const {text} = Astro.props as Props;
---

<div class="flex flex-col gap-2 items-center justify-between shadow-lg border py-3 px-4 hover:motion-preset-bounce motion-duration-500">
    <slot />
    <p class="text-gray-600 text-lg font-bold">{text}</p>
</div>
